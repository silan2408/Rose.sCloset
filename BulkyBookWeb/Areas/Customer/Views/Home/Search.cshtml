@model IEnumerable<BulkyBook.Models.Product>

@{
    ViewData["Title"] = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="row pb-3">

@foreach(var product in Model)
	{
		

			<div class="col-lg-3 col-md-6">
				<div class="row p-2">
					<div class="col-12 p-1" style="border:1px solid #008cba; border-radius: 5px;">
						<div class="card">
							<img src="@product.Image" class="card-img-top rounded"/>

							<div class="card-body">
								<div class="pl-1">
									<p class="card-title h5 text-primary">@product.ProductName</p>
									<p class="card-title text-info"> UPC: <b>@product.Description</b></p>
								</div>
								<div class="pl-1">
									<p>List Price: <strike><b>$@product.UnitPrice.ToString("0.00")</b></strike></p>
								</div>
								<div class="pl-1">
									<p>discounted price:<b>$@product.Discount.ToString("0.00")</b></p>
								</div>

							</div>
							  <div class=" text-center product-grid">
           
						<div class="product-content">
                <ul class="rating">
                    <li class="bi bi-star"></li>
                    <li class="bi bi-star"></li>
                    <li class="bi bi-star"></li>
                    <li class="bi bi-star disable"></li>
                    <li class="bi bi-star disable"></li>
                    <li class="disable">(3 reviews)</li>
                </ul>
               
            </div>
			</div>
						</div>
						<div>
							<a asp-action="Details" class="btn btn-primary form-control" asp-route-productId="@product.Id">
								Details
							</a>
						</div>
					</div> 
				</div>
			</div>
		
	}
	</div>